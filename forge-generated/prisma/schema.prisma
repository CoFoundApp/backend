generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  last_name String
  first_name String
  password String
  email String
  phone_number Int
  username String
  is_admin Boolean
}

model Profil {
  id Int @id @default(autoincrement())
  user_id Int
  availability String
  location String
  notif_push Boolean
  notif_email Boolean
  notif_phone Boolean
  topic_id Int
}

model Experience {
  id Int @id @default(autoincrement())
  user_id Int
  starting_date Date
  ending_date Date
  title String
  description String
  location String
  role String
}

model UserSkill {
  user_id Int
  skill_id Int
}

model Skill {
  id Int @id @default(autoincrement())
  name String
}

model Notification {
  id Int @id @default(autoincrement())
  user_id Int
  link String
  description String
  seen Boolean
  emitter_user_id Int
  emitter_projet_id Int
}

model ExperienceSkill {
  skill_id Int
  experience_id Int
}

model Project {
  id Int @id @default(autoincrement())
  user_id Int
  title String
  description String
  starting_date Date
  ending_date Date
}

model ProjectSkill {
  project_id Int
  skill_id Int
}

model Contributor {
  id Int @id @default(autoincrement())
  project_id Int
  user_id Int
  starting_date Date
  ending_date Date
  role String
  mission String
}

model Messages {
  id Int @id @default(autoincrement())
  sender_user_id Int
  receiver_user_id Int
  sent_date Date
  seen_date Date
  message String
}

model Application {
  id Int @id @default(autoincrement())
  user_id Int
  project_id Int
  description String
  is_refused Boolean
  is_accepted Boolean
}

model Favorites {
  user_id Int
  project_id Int
}

model TopicProject {
  topic_id Int
  project_id Int
}

model Topic {
  id Int @id @default(autoincrement())
  name String
}

